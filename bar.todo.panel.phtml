<h1>Todo</h1>

<div class="nette-inner">
	<table style="width: 100%;">
		<thead>
			<tr>
				<th>File</th>
				<th>Todo</th>
			</tr>
		</thead>
		<tbody>
			{foreach $todos as $file => $t}
				<tr n:foreach="$t as $todo">
					<td n:if="$iterator->first" rowspan="{=count($t)}">{=basename($file)}</td>
					<td>{!$todo}</td>
				</tr>
			{/foreach}
		</tbody>
	</table>
</div>
